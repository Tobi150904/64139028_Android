<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <fragment
        android:id="@+id/fragment_header"
        android:name="vn.ngoviethoang.chuyenmanhinh.Header_English_Fragment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <fragment
        android:id="@+id/fragment_body"
        android:name="vn.ngoviethoang.chuyenmanhinh.Body_English_Fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_header"
        app:layout_constraintBottom_toTopOf="@id/fragment_footer"/>

    <fragment
        android:id="@+id/fragment_footer"
        android:name="vn.ngoviethoang.chuyenmanhinh.Footer_English_Fragment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>